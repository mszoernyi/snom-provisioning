= form_for @phone do |f|
  -if @phone.errors.any?
    #error_explanation
      %h2= "#{pluralize(@phone.errors.count, "error")} prohibited this phone from being saved:"
      %ul
        - @phone.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :mac
    = f.text_field :mac
  .field
    = f.label :sip_login
    = f.text_field :sip_login
  .field
    = f.label :sip_password
    = f.text_field :sip_password
  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'
