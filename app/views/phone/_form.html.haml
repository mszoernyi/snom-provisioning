= form_for @phone, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :mac, :class => 'control-label'
    .controls
      = f.text_field :mac, :class => 'text_field'
  .control-group
    = f.label :sip_login, :class => 'control-label'
    .controls
      = f.number_field :sip_login, :class => 'number_field'
  .control-group
    = f.label :sip_password, :class => 'control-label'
    .controls
      = f.text_field :sip_password, :class => 'text_field'
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), phone_path, :class => 'btn'
