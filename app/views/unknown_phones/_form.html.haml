= form_for @unknown_phone, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :mac_address, :class => 'control-label'
    .controls
      = f.text_field :mac_address, :class => 'text_field'
  .control-group
    = f.label :requester_ip, :class => 'control-label'
    .controls
      = f.text_field :requester_ip, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), unknown_phones_path, :class => 'btn'
