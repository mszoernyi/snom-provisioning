- model_class = @unknown_phone.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:mac_address) + ':'
  %br
  = @unknown_phone.mac_address
%p
  %strong= model_class.human_attribute_name(:requester_ip) + ':'
  %br
  = @unknown_phone.requester_ip

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), unknown_phones_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_unknown_phone_path(@unknown_phone), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), unknown_phone_path(@unknown_phone), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
